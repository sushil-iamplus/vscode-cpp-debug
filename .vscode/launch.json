  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Mac lldb) Launch Program",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/main",
			"preLaunchTask": "build",
			"args": [
				"4",
				"3",
				"2",
				"1"
			],
			"stopAtEntry": true,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "lldb"
    },
    {
			"name": "(Mac lldb) Launch cunit",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/bubble_sort_cunit",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": true,
			"preLaunchTask": "build cunit",
			"MIMode": "lldb"
		},
  ]
}
